{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build cutils",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-c",
                "cutils.c",
                "-o",
                "cutils"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "build hello",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g","-W",
                "-pthread","-std=c++11",
                "hello.cpp","utils.cpp","cutils",
                "-o","hello"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}